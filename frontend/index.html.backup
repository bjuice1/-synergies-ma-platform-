<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Synergy Management Platform</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><i class="fas fa-layer-group me-2"></i>Synergy Platform</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" data-view="synergies">Synergies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-view="functions">Functions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-view="industries">Industries</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
        <!-- Alert Container -->
        <div id="alertContainer"></div>

        <!-- Synergies View -->
        <div id="synergiesView" class="view active">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-layer-group me-2"></i>Synergies</h2>
                <button class="btn btn-primary" id="createSynergyBtn">
                    <i class="fas fa-plus me-2"></i>Create Synergy
                </button>
            </div>

            <!-- Search and Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="searchInput" placeholder="Search synergies...">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="industryFilter">
                                <option value="">All Industries</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-secondary w-100" id="clearFiltersBtn">
                                <i class="fas fa-times me-2"></i>Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Synergies Grid -->
            <div id="synergiesGrid" class="row g-4">
                <!-- Synergy cards will be inserted here -->
            </div>

            <!-- Pagination -->
            <nav aria-label="Synergies pagination" class="mt-4">
                <ul class="pagination justify-content-center" id="synergyPagination">
                    <!-- Pagination items will be inserted here -->
                </ul>
            </nav>

            <!-- Loading Spinner -->
            <div id="loadingSpinner" class="text-center py-5 d-none">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

        <!-- Functions View -->
        <div id="functionsView" class="view">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-cogs me-2"></i>Functions</h2>
                <button class="btn btn-primary" id="createFunctionBtn">
                    <i class="fas fa-plus me-2"></i>Create Function
                </button>
            </div>
            <div id="functionsGrid" class="row g-4">
                <!-- Function cards will be inserted here -->
            </div>
        </div>

        <!-- Industries View -->
        <div id="industriesView" class="view">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-industry me-2"></i>Industries</h2>
                <button class="btn btn-primary" id="createIndustryBtn">
                    <i class="fas fa-plus me-2"></i>Create Industry
                </button>
            </div>
            <div id="industriesGrid" class="row g-4">
                <!-- Industry cards will be inserted here -->
            </div>
        </div>
    </main>

    <!-- Synergy Modal -->
    <div class="modal fade" id="synergyModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="synergyModalTitle">Create Synergy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="synergyForm">
                        <input type="hidden" id="synergyId">
                        <div class="mb-3">
                            <label for="synergyName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="synergyName" required>
                        </div>
                        <div class="mb-3">
                            <label for="synergyDescription" class="form-label">Description *</label>
                            <textarea class="form-control" id="synergyDescription" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="synergyIndustry" class="form-label">Industry *</label>
                            <select class="form-select" id="synergyIndustry" required>
                                <option value="">Select industry...</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="synergyFunctions" class="form-label">Functions</label>
                            <select class="form-select" id="synergyFunctions" multiple size="5">
                                <!-- Options will be populated dynamically -->
                            </select>
                            <div class="form-text">Hold Ctrl/Cmd to select multiple functions</div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="synergyIsActive" checked>
                                <label class="form-check-label" for="synergyIsActive">Active</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="saveSynergyBtn">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Function Modal -->
    <div class="modal fade" id="functionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="functionModalTitle">Create Function</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="functionForm">
                        <input type="hidden" id="functionId">
                        <div class="mb-3">
                            <label for="functionName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="functionName" required>
                        </div>
                        <div class="mb-3">
                            <label for="functionDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="functionDescription" rows="2"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="saveFunctionBtn">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Industry Modal -->
    <div class="modal fade" id="industryModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="industryModalTitle">Create Industry</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="industryForm">
                        <input type="hidden" id="industryId">
                        <div class="mb-3">
                            <label for="industryName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="industryName" required>
                        </div>
                        <div class="mb-3">
                            <label for="industryDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="industryDescription" rows="2"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="saveIndustryBtn">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="deleteMessage">Are you sure you want to delete this item?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Application JS Modules -->
    <script type="module" src="js/app.js"></script>
</body>
</html>